<div class='section container' id='login-section'>
  <div class='centered'>
    <div class="" id='login'>
      <div class="box">
        <h2>Login</h2>
        <hr>
        <%= form_for @login, :url => sessions_path do |f| %>
        <div class='form-field'>
          <%= f.label "Username:" %>
          <%= f.text_field :username %>
          <p class='errors'><%= show_errors(@login, :username) %></p>
        </div>

        <div class='form-field'>
          <%= f.label "Password:" %>
          <%= f.password_field :password %>
          <p class='errors'><%= show_errors(@login, :password) %></p>
        </div>

        <%= content_tag(:button, "Login") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
