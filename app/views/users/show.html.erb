<div class="section container" id="business-section">
  <div class='centered'>
    <div class="" id='business-form'>
      <div class='box'>

        <% if flash[:notice] %>
          <%= flash[:notice] %>
        <% end %>

        <h2>Welcome, <%= @user.username %></h2>
          <%= link_to "add business", new_business_path %>








        <h3>Saved Flights</h3>
        <ul>
        <% @user.flights.each do |flight| %>
          <li><%= flight.name %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
