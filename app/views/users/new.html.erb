<div class='section container' id='register-section'>
  <div class='centered'>
    <div class="" id='register'>
      <div class="box">
        <h2>New user</h2>
        <hr>
        <%= form_for @user do |f| %>
        <div class='form-field'>
          <%= f.label "Username:" %>
          <%= f.text_field :username %>
          <p class='errors'><%= show_errors(@user, :username) %></p>
        </div>

        <div class='form-field'>
          <%= f.label "Password:" %>
          <%= f.password_field :password %>
          <p class='errors'><%= show_errors(@user, :password) %></p>
        </div>

        <div class='form-field'>
          <%= f.label "Confirm Password:" %>
          <%= f.password_field :password_confirmation %>
          <p class='errors'><%= show_errors(@user, :password_confirmation) %></p>
        </div>

        <%= content_tag(:button, "Register") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
