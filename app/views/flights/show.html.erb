<%= content_tag "div", id: "businesses", data: {url: @flight.businesses} do %>
<% end %>
<div class="row">
  <div class="col gutters-d span-8-d" id="map-container">
    <div id="map-canvas">

    </div>
  </div>

  <div class="col gutters-d span-4-d gray-box" id="business-list">
  <h1>This is a business list</h1>
  <% @flight.businesses.each do |business| %>
    <h2><%= business.name %></h2>
    <p><%= business.location %></p>
    <p>Rating: <%= business.rating %></p>
  <% end %>
  </div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['MAP_KEY'] %>&callback=initMap" defer async></script>
