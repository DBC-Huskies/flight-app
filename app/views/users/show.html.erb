<div class="section container" id="profile-section">
  <div class='centered'>
    <div class="" id='profile'>
      <div class='box'>
        <h2>Welcome, <%= @user.username %></h2>

        <h3>Flights you've bookmarked</h3>
        <% if @user.flights.empty? %>
          <p>You can bookmark your favorite flights and access them again here.</p>
        <% else %>
          <ul>
          <% @user.flights.each do |flight| %>
            <li><%= link_to flight.name, flight_path(flight) %></li>
          <% end %>
          </ul>
        <% end %>

        <h3>Businesses you've rated</h3>
        <% if @user.ratings.empty? %>
           <p>Rate the businesses you have visited.</p>
        <% else %>
          <ul>
          <% @user.ratings.each do |rating| %>
          <li><%= link_to "#{rating.business.name}", rating.business %></li>
          <% end %>
          </ul>
        <% end %>

        <%= link_to "Add a Business to SipTrip", new_business_path %>

      </div>
    </div>
  </div>
</div>
